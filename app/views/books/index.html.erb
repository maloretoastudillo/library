<h3 class = 'my-2'>Mi biblioteca</h3>

<div class='my-3'>
<form class="form-inline my-2 my-lg-0 d-flex justify-content-end">
  <select class="custom-select" placeholder="Filtrar por estado" name='state'>
    <option value="1">prestado</option>
    <option value="2">en_estante</option>
    <option value="3">todos</option>
</select>
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Filtrar</button>
</form>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Título</th>
      <th scope="col">Autor</th>
      <th scope="col">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
        <tr> 
            <th scope="row"><%= book.title %></th>
            <td><%= book.author %></td>
            <td><%= book.status %></td>
            <td><%= link_to 'Detalle', book_path(book.id) %></td>
            <td><%= link_to 'Editar', edit_book_path(book.id) %></td>
            <td><%= link_to 'Eliminar', book_path(book.id), method: :delete, data: {confirm: "¿Está seguro de eliminar de sus registros el libro: #{book.title}?"}  %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Ingresar un nuevo libro', new_book_path %>
