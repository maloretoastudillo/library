<%= form_with model: borrowing, local: true, class: 'form-group col-md-6 mt-3' do |form| %>
<div class = 'form-group'>
    <%= form.label 'Prestado a:' %>
    <%= form.text_field :borrowed_to, class: 'form-control' %>
</div>
<div class = 'form-group'>
    <%= form.label 'Fecha péstamo:' %>
    <div>
        <%= form.date_select :borrowed_at, order: [:day, :month, :year], start_year: 2020 %>
    </div>
</div>
<div class = 'form-group'>
    <%= form.label 'Fecha devolución:' %>
    <div>
        <%= form.date_select :returned_at, order: [:day, :month, :year], start_year: 2020, include_blank: true %>
    </div>
</div>
<div class = 'form-group'>
    <%= form.label 'Libro' %>
    <%= form.select :book_id, @books, {}, class: 'custom-select' %>
</div>




<div>
    <%= form.submit 'Guardar' %>
</div>
<% end %>